/* pages/index/index.wxss */
.searchipt{
  width:100%;
  height:80rpx;
  border-radius: 40rpx;
  padding-left: 80rpx;
}
.iptwrap{
  width:80%;
  background-color: rgba(139,195,74,0.5);
  margin:20rpx auto;
  border-radius: 40rpx;
  position:relative;
}
.iconsearch{
  position:absolute;
  top:50%;
  margin-top: -10px;
  left:20rpx;
}
.itemwrap{
  width:100%;
  justify-content: space-between;
  padding:0 20rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  flex-wrap: wrap;
}
.itemlist{
  width:48%;
  border:1rpx solid #ccc;
  border-radius: 10rpx;
  position:relative;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  padding:20rpx;
}
.entercar{
  border-radius: 10rpx;
  position:absolute;
  right:-1rpx;
  top:-1rpx;
  padding:15rpx;
  background-color: white;
  border:1rpx solid #ccc;
  color:#8BC34A;
  font-size: 28rpx;
}
.fruitimg{
  width:100%;
  height:300rpx;
  display: block;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}
.info{
  justify-content: space-between;
  font-size: 30rpx;
}
.info::before{
  display: block;
  content:'';
  border-top:1rpx solid #ccc;
  position:absolute;
  width:100%;
  left:0;
}
.money{
  color:red;
  font-size: 32rpx;
  font-weight: bold;
}
.nosamll{
  max-width: 70%;
  margin-top: 20rpx;
}
.hoverclass{
  background-color: rgba(139,195,74,0.5);
  color:white;
}